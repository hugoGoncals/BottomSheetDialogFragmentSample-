<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/home_dest">

    <!--top level fragment-->
    <fragment
        android:id="@+id/home_dest"
        android:name="com.companyname.NavigationCodeLab.Fragments.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/home_fragment">

        <!-- TODO STEP 7.1 - Add action with transitions -->
        <action
            android:id="@+id/next_action"
            app:destination="@+id/flow_step_one_dest"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <!-- TODO END STEP 7.1 -->

    </fragment>

    <fragment
        android:id="@+id/flow_step_one_dest"
        android:name="com.companyname.NavigationCodeLab.Fragments.FlowStepFragment"
        tools:layout="@layout/flow_step_one_fragment">
        <argument
            android:name="flowStepNumber"
            android:defaultValue="1"
            app:argType="integer" />
    </fragment>

	<dialog
	  android:id="@+id/bottom_sheet_dest"
	  android:name="com.companyname.NavigationCodeLab.Fragments.BottomSheetExample"
	  android:label="Bottom Sheet"
	  tools:layout="@layout/bottom_sheet_layout" />


</navigation>
